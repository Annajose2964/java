package mod2;
import java.util.*;

public class Stringreverse 
{
    public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in= new Scanner(System.in);
		System.out.println("enter the word");
			String sb= in.next();
			int l=sb.length();
			for(int i=l-1;i>=0;i--)
			{
				System.out.println(sb.charAt(i));
			}
			System.out.println(" ");
		} 
    }
